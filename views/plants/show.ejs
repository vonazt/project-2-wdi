<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-half-desktop">
        <h2 class="show-plant-heading"><%= plant.name %></h2>
        <img class src="<%= plant.image %>" alt="<%= plant.species %>">
      </div>
      <div class="column is-quarter-desktop">
        <p class="plant-details show"><strong>Species:</strong> <%= plant.species %></p>
        <p class="plant-details show"><strong>Planted on:</strong> <%= plant.datePlanted %></p>
        <p class="plant-details show"><strong>Water every</strong>  <%= plant.wateringSchedule %> days</p>
        <p class="plant-details show"><strong>Soil should be:</strong> <%= plant.soilShouldBe %></p>
        <p class="plant-details show"><strong>Sunlight:</strong> <%= plant.sunlightRequired %></p>
      </div>
    </div>
  </div>
</section>
