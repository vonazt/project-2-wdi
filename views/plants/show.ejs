<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-half-desktop">
        <h2 class="show-plant-heading"><%= plant.name %></h2>
        <img class src="<%= plant.image %>" alt="<%= plant.species %>">
      </div>
      <div class="column is-quarter-desktop">
        <ul>
          <li class="plant-details show"><strong>Species:</strong> <%= plant.species %></li>
          <li class="plant-details show"><strong>Planted on:</strong> <%= plant.datePlanted.toLocaleDateString('en-GB', {day: 'numeric', month: 'long', year: 'numeric'}) %></li>
          <li class="plant-details show"><strong>Water every</strong>  <%= plant.wateringSchedule %> days</li>
          <li class="plant-details show"><strong>Soil should be:</strong> <%= plant.soilShouldBe %></li>
          <li class="plant-details show"><strong>Sunlight:</strong> <%= plant.sunlightRequired %></li>
          <p class="plant-details"><strong>Needs watering in</strong>  <%= plant.waterIn %> days</p>
          <li>Comments</li>
          <% plant.comments.forEach(comment => { %>
          <li>
            <p><%= comment.content %></p>
            <p>Submitted by: <%= comment.commenter.username %></p>
            <form action="/plants/<%= plant.id %>/comments/<%= comment.id %>" method="POST">
              <input type="hidden" name="_method" value="DELETE">
              <button name="button">Delete</button>
            </form>
          </li>
          <% }) %>
        </ul>
        <form action="/plants/<%= plant.id %>/comments" method="POST">
          <article class="media">
            <% if (user.profilePic ) { %>
              <figure class="media-left">
                <p class="image is-64x64">
                  <img src="https://bulma.io/images/placeholders/128x128.png">
                </p>
              </figure>
            <% } %>
            <div class="media-content">
              <div class="field">
                <p class="control">
                  <textarea class="textarea" name="content" placeholder="Add a comment..." required></textarea>
                </p>
              </div>
              <nav class="level">
                <div class="level-left">
                  <div class="level-item">
                    <button class="button submit-button" name="button">Submit</button>
                  </div>
                </div>
              </nav>
            </div>
          </article>
        </form>

      </div>
    </div>
  </div>
</section>
